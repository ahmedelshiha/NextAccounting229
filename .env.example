# Development Environment Configuration
# Copy this to .env.local and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Performance Optimization
NODE_OPTIONS=--max-old-space-size=4096
NEXT_TELEMETRY_DISABLED=1

# Database (use connection pooling)
DATABASE_URL="postgresql://user:password@localhost:5432/dbname?schema=public&connection_limit=5"
# If deploying on Netlify/Neon
NETLIFY_DATABASE_URL=""

# Prisma Configuration (pin to installed engines)
PRISMA_QUERY_ENGINE_BINARY="node_modules/.pnpm/@prisma+engines@6.16.2/node_modules/@prisma/engines/libquery_engine-*"
PRISMA_MIGRATION_ENGINE_BINARY="node_modules/.pnpm/@prisma+engines@6.16.2/node_modules/@prisma/engines/migration-engine-*"
PRISMA_INTROSPECTION_ENGINE_BINARY="node_modules/.pnpm/@prisma+engines@6.16.2/node_modules/@prisma/engines/introspection-engine-*"
PRISMA_FMT_BINARY="node_modules/.pnpm/@prisma+engines@6.16.2/node_modules/@prisma/engines/prisma-fmt-*"

# Auth / Monitoring
NEXTAUTH_SECRET=""
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""

# Redis Configuration (optional)
REDIS_URL="redis://localhost:6379"
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# Development Tools
NEXT_PUBLIC_VERCEL_ENV=development
ANALYZE=false
DEBUG=false
