# Copy this file to .env.local (or set variables in your hosting/dev UI) and replace values.

# Database
DATABASE_URL=postgresql://user:password@db-host:5432/dbname?schema=public

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=REPLACE_ME_WITH_A_LONG_RANDOM_STRING

# API / App
NEXT_PUBLIC_API_BASE=/api

# Email (SendGrid)
SENDGRID_API_KEY=REPLACE_ME

# Optional integrations
NEON_URL=REPLACE_ME
SUPABASE_URL=REPLACE_ME
SUPABASE_ANON_KEY=REPLACE_ME

# Feature flags / runtime
NEXT_PUBLIC_ENABLE_TASK_MGMT=true
